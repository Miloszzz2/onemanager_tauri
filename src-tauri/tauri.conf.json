{
    "build": {
        "beforeDevCommand": "pnpm dev",
        "beforeBuildCommand": "pnpm build",
        "devPath": "http://localhost:1420",
        "distDir": "../dist"
    },
    "package": {
        "productName": "onemanager",
        "version": "0.0.0"
    },
    "tauri": {
        "allowlist": {
            "all": false,
            "shell": {
                "all": false,
                "open": true,
                "sidecar": true,
                "scope": [
                    {
                        "name": "./bin/iconExtract",
                        "sidecar": true,
                        "args": true
                    }
                ]                
            },
            "window": {
                "create": true,
                "minimize": true,
                "unminimize": true,
                "setFocus": true,
                "startDragging": true,
                "close": true
            },
            "globalShortcut": {
                "all": true
            }
        },

        "windows": [
            {
                "title": "onemanager",
                "width": 512,
                "height": 349,
                "center": true,
                "transparent": true,
                "decorations": false,
                "resizable": false,
                "alwaysOnTop": true
            }
        ],
        "security": {
            "csp": null
        },
        "bundle": {
            "externalBin": [
                "./bin/iconExtract"
            ],
            "active": true,
            "targets": "all",
            "identifier": "com.tauri.dev",
            "icon": [
                "icons/32x32.png",
                "icons/128x128.png",
                "icons/128x128@2x.png",
                "icons/icon.icns",
                "icons/icon.ico"
            ]
        }
    }
}
