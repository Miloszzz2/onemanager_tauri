{
    "build": {
        "beforeDevCommand": "pnpm dev",
        "beforeBuildCommand": "pnpm build",
        "devPath": "http://localhost:1420",
        "distDir": "../dist"
    },
    "package": {
        "productName": "onemanager",
        "version": "0.0.0"
    },
    "tauri": {
        "allowlist": {
            "all": false,
            "shell": {
                "all": false,
                "open": true,
                "sidecar": true,
                "scope": [
                    {
                        "name": "./bin/iconExtract",
                        "sidecar": true,
                        "args": true
                    },
                    {
                        "name": "./bin/currentSong3",
                        "sidecar": true,
                        "args": true
                    }
                    
                ]
            },
            "window": {
                "create": true,
                "minimize": true,
                "unminimize": true,
                "setFocus": true,
                "startDragging": true,
                "close": true,
                "show": true,
                "hide": true
            },
            "globalShortcut": {
                "all": true
            }
        },
        "windows": [
            {
                "title": "onemanager",
                "label": "main",
                "width": 512,
                "height": 349,
                "center": true,
                "transparent": true,
                "decorations": false,
                "resizable": false,
                "alwaysOnTop": true,
                "visible": false
            },
            {
                "label": "Settings",
                "title": "Settings",
                "url": "settings.html",
                "width": 1000,
                "height": 600,
                "decorations": false,
                "alwaysOnTop": true,
                "resizable": false,
                "visible": false,
                "closable": false,
                "skipTaskbar": true,
                "transparent": true
            },
            {
                "label": "Boarding",
                "title": "Boarding",
                "url": "boarding.html",
                "width": 1000,
                "height": 600,
                "visible": true,
                "resizable": false,
                "decorations": false,
                "transparent": true,
                "center": true
            }
        ],
        "security": {
            "csp": null
        },
        "bundle": {
            "externalBin": [
                "./bin/iconExtract",
                "./bin/currentSong3"
            ],
            "active": true,
            "targets": "all",
            "identifier": "com.tauri.dev",
            "icon": [
                "icons/32x32.png",
                "icons/128x128.png",
                "icons/128x128@2x.png",
                "icons/icon.icns",
                "icons/icon.ico"
            ]
        }
    }
}